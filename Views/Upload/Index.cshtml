@{
    ViewData["Title"] = "Upload de Arquivos";
}

<div class="container-fluid">
    <h2>Upload de Arquivos</h2>

    <div class="row mb-4">
        <div class="col">
            <form id="uploadForm" class="card">
                <div class="card-body">
                    <h5 class="card-title">Upload de Arquivos</h5>
                    <div class="mb-3">
                        <label for="fileInput" class="form-label">Selecione os arquivos</label>
                        <input type="file" class="form-control" id="fileInput" name="files" multiple accept=".csv">
                        <div id="selectedFiles" class="form-text text-muted mt-1"></div>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="button" id="generateTestBtn" class="btn btn-secondary">Gerar Arquivos de Teste</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Tabela de Lotes -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Lotes de Upload</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Status</th>
                                    <th>Arquivos</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody id="batchTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabela de Arquivos -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Arquivos do Lote</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nome do Arquivo</th>
                                    <th>Status</th>
                                    <th>Início</th>
                                    <th>Fim</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody id="fileTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Upload -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload de Arquivos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="uploadForm">
                    <div class="mb-3">
                        <label for="files" class="form-label">Selecione os arquivos</label>
                        <input type="file" class="form-control" id="files" multiple required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="uploadButton">Upload</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Erro -->
<div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalhes do Erro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>Arquivo: <span id="errorFileName"></span></h6>
                <div class="alert alert-danger mt-3">
                    <pre id="errorDetails" class="mb-0" style="white-space: pre-wrap;"></pre>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
