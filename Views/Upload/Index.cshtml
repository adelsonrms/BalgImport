@{
    ViewData["Title"] = "Upload BALG";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">🚀 Upload de Arquivos BALG</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label for="fileUpload" class="form-label">Selecione os Arquivos</label>
                <input class="form-control" type="file" id="fileUpload" multiple>
            </div>
            <button class="btn btn-primary" onclick="startUpload()">📤 Iniciar Upload</button>

            <div class="mt-3" id="arquivosSelecionados"></div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5>Status dos Uploads</h5>

            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Arquivo</th>
                        <th>Status</th>
                        <th>Mensagem</th>
                        <th>Início</th>
                        <th>Fim</th>
                    </tr>
                </thead>
                <tbody id="statusTableBody"></tbody>
            </table>
        </div>
    </div>
</div>

